<div class="container-fluid">
  <div style="margin:20px 0 20px">
    <div class="row">
      <div class="col-md-12">
        <p id="notice"><%= notice %></p>

        <h1>Listing Matches</h1>

        <table class="display table" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Title</th>
              <th>Date</th>
              <th>League</th>
              <th>Season</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @matches.each do |match| %>
              <tr>
                <td><%= link_to match.title, match %></td>
                <td><%= match.datetime %></td>
                <td><%= match.league.upcase if match.league %></td>
                <td><%= match.season %></td>
                <td><%= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <% link_to 'New Match', new_match_path %>
      </div>
    </div>
  </div>
</div>
